@model IEnumerable<ParticipantOrderViewModel>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Таблица заявившихся на турнир 29.09.2024</title>
    <link rel="stylesheet" href="~/css/participants.css" asp-append-version="true" />
</head>
<body>
    <div class="participants-container">
        <a href="@Url.Action("DownloadParticipantsExcel", "Admin")" class="download-excel-button">Скачать в формате Excel</a>
        <h1 class="participants-title">
            Таблица заявившихся на турнир 29.09.2024 Всего участников: @Model.Select(p => new { p.LastName, p.FirstName, p.MiddleName, p.BirthDate }).Distinct().Count()
        </h1>
        <div class="table-responsive">
            <table class="participants-table">
                <thead>
                    <tr>
                        <th>Дата заказа</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Отчество</th>
                        <th>Дата рождения</th>
                        <th>Пол</th>
                        <th>Город/Команда</th>
                        <th>Разряд</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th>Дисциплина</th>
                        <th>Дистанция</th>
                        <th>Заявочное время</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CreatedAt.AddHours(3).ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.LastName</td>
                            <td>@item.FirstName</td>
                            <td>@item.MiddleName</td>
                            <td>@item.BirthDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.Gender</td>
                            <td>@item.CityOrTeam</td>
                            <td>@item.Rank</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.DisciplineName</td>
                            <td>@item.Distance</td>
                            <td>@item.EntryTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
